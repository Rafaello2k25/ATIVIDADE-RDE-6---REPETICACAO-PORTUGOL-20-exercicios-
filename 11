programa
{
	
	funcao inicio()
	{
		real paisA 
		real paisB 
		real taxaA 
		real taxaB 
		inteiro anos = 0

		escreva("Informe a população do país A: \n")
			leia(paisA)
		escreva("Informe a população do país B: \n")
			leia(paisB)
		escreva("Informe a taxa de crescimento do país A: \n")	
			leia(taxaA)
		escreva("Informe a taxa de crescimento do país B: \n")	
			leia(taxaB)
		
		
		enquanto(paisA < paisB){
			paisA = paisA + (paisA * taxaA)
			paisB = paisB + (paisB * taxaB)
			anos = anos + 1
		}
		
		escreva("Serão necessários ", anos, " anos para que o país A alcance ou ultrapasse o país B. \n")
    		escreva("População final de A: ", paisA, "\n")
    		escreva("População final de B: ", paisB)
	}
}
