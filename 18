programa
{
    funcao inicio()
    {
        inteiro n
        inteiro fatorial = 1

        escreva("Digite um nÃºmero inteiro: ")
        leia(n)

        escreva(n, "! = ")

       
        para(inteiro i = n; i >= 1; i--)
        {
            escreva(i)
            se(i > 1)
            {
                escreva(".")
            }
            fatorial = fatorial * i
        }

        escreva(" = ", fatorial, "\n")
    }
}
